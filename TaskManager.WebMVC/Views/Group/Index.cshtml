@model IEnumerable<TaskManager.Models.GroupListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Join a Group</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.ActionLink("Join", "Join", new { id = item.GroupID })<text> &nbsp; </text>

                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.GroupID }) <text> &nbsp; </text>
                }
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Details", "Details", new { id = item.GroupID })<text> &nbsp; </text>
                }
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.GroupID })<text> &nbsp; </text>
                }
            </td>
        </tr>
    }

</table>
